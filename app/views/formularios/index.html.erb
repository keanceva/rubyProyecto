<%= render 'layouts/header' %>
<p id="notice"><%= notice %></p>
<div class="col-md-12" style="padding-bottom: 200px;padding-top: 100px">
<h2>Formularios</h2>
<div class="col-md-12" style="padding-bottom: 200px;padding-top: 20px">
<table class="table table-bordered" style= "background: honeydew;">
  <thead style="background-color: #343a40!important;color: white;text-align: center">
    <tr>
      <th>Nombre</th>
      <th>Telefono</th>
      <th>Mascota</th>
      <th>Sexo</th>
      <th>Descripcion</th>
      <th>Fecha</th>
      <th>Imagen</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @formularios.each do |formulario| %>
      <tr>
        <td><%= formulario.nombre %></td>
        <td><%= formulario.telefono %></td>
        <td><%= formulario.mascota %></td>
        <td><%= formulario.sexo %></td>
        <td><%= formulario.descripcion %></td>
        <td><%= formulario.fecha %></td>
        <td><%= image_tag formulario.picture.thumb.url, class: 'figure-img img-fluid rounded'  %></td>
        <td><%= link_to 'Show', formulario %></td>
        <td><%= link_to 'Edit', edit_formulario_path(formulario) %></td>
        <td><%= link_to 'Destroy', formulario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>

<%= link_to 'New Formulario', new_formulario_path %>
<%= render 'layouts/footer' %>